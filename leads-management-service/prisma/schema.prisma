  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  fbPageTokens FbPageToken[]
}

model FbPageToken {
  id          String       @id @default(uuid())
  pageId      String       @unique
  pageName    String?
  accessToken String
  // keep reference to which user token was used to generate this
  userTokenId String?
  userToken   FbUserToken? @relation(fields: [userTokenId], references: [id])

  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum LeadActivityType {
  LEAD_ADDED
  COMMENT
  CALL
  MEETING
  TEST_DRIVE
  TESTDRIVE_UPDATE
  FINANCE
  FINANCE_UPDATE
  BUDGET_UPDATE
  OCCUPATION_UPDATE
  MODEL_UPDATE
  STATUS_UPDATE
  CATEGORY_UPDATE
  ASSIGNMENT
  CALLBACK
  EMAIL
  OTHER
}


enum LeadCategory {
  COLD
  WARM
  HOT
}
