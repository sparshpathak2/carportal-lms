generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  name      String?
  phone     String?
  alternatePhone  String?
  location  String?
  city      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // user belongs to exactly 1 dealer
  dealerId String?
  dealer   Dealer? @relation(fields: [dealerId], references: [id])

  // User Role
  roleId String
  role   Role   @relation(fields: [roleId], references: [id])

  // lead assignment target for the user
  liveDailyTarget     Int    @default(0)
  liveWeeklyTarget    Int    @default(0)
  liveMonthlyTarget   Int    @default(0)

  // Dealers this user owns (many-to-many)
  ownerOf DealerOwner[]

  userDealerMetrics UserDealerMetrics[]

  sessions Session[]
  metrics   UserMetrics[]
}

model Dealer {
  id        String     @id
  name      String
  gstNumber String?
  city      String?
  address   String?
  type      DealerType @default(REGULAR)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // LIVE targets for dealer
  liveDailyTarget    Int @default(0)
  liveWeeklyTarget   Int @default(0)
  liveMonthlyTarget  Int @default(0)

  users User[]
  packs Pack[]

  // Users who own this dealer
  owners DealerOwner[]
  metrics DealerMetrics[]
  userDealerMetrics UserDealerMetrics[]
}

enum DealerType {
  PREMIUM
  REGULAR
}

model Role {
  id    String @id
  name  String @unique // e.g. SUPER_ADMIN, ADMIN, SALES, SUPPORT, etc.
  roleType RoleType @default(DEALER)
  users User[]
}

enum RoleType {
  INTERNAL      // roles created by system (e.g., SUPER_ADMIN)
  DEALER      // dealer-specific roles (e.g., SALES, SUPPORT)
}

model DealerOwner {
  id String @id @default(uuid())

  userId   String
  dealerId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  dealer Dealer @relation(fields: [dealerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([dealerId])
}

model Pack {
  id             String   @id @default(uuid())
  name           String
  targetLeads    Int
  packCost       Float // ‚≠ê ADDED FIELD
  cycleStartDate DateTime
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  packType PackType @default(LEADS)

  dealerId String
  dealer   Dealer @relation(fields: [dealerId], references: [id])
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum PackType {
  LEADS
  DIGITAL_MARKETING
}

model UserMetrics {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  date      DateTime

  // Lead performance
  leadsAssigned     Int @default(0)
  leadsDelivered    Int @default(0)
  leadsConverted    Int @default(0)
  leadsUnattended   Int @default(0)
  pendingFollowups  Int @default(0)

  // Response time (in minutes)
  avgResponseTime   Int @default(0)

  // Performance KPI
  targetCompletionRate Float @default(0) // %

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DealerMetrics {
  id           String   @id @default(uuid())
  dealerId     String
  dealer       Dealer   @relation(fields: [dealerId], references: [id], onDelete: Cascade)

  date         DateTime
  
  leadsDelivered  Int     @default(0)
  leadsConverted Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserDealerMetrics {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  dealerId  String
  dealer    Dealer   @relation(fields: [dealerId], references: [id])

  date      DateTime

  // Lead performance
  leadsAssigned     Int @default(0)
  leadsDelivered    Int @default(0)
  leadsConverted    Int @default(0)
  leadsUnattended   Int @default(0)
  pendingFollowups  Int @default(0)

  // Response time (in minutes)
  avgResponseTime   Int @default(0)

  // Performance KPI
  targetCompletionRate Float @default(0) // %

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, dealerId, date])
}



