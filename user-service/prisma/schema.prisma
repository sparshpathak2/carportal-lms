generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  dealerId String? // nullable â†’ super admins may not belong to a dealer
  dealer   Dealer? @relation(fields: [dealerId], references: [id])

  roleId String
  role   Role   @relation(fields: [roleId], references: [id])

  sessions Session[]
}

model Dealer {
  id        String   @id
  name      String
  gstNumber String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users User[]
}

model Role {
  id    String @id
  name  String @unique // e.g. SUPER_ADMIN, ADMIN, SALES, SUPPORT, etc.
  users User[]
}

